---
const { title, guest1, description1 } = Astro.props;
---

<div id="modalA" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo">
      <div class="line2"></div>
    </div>
  </div>
  <div class="block-title"> 
    <div class="content-block">
      <p> <strong>Ubicación:</strong> New Jersey</p>
      <p><strong>Pago por hora:</strong> 20 USD</p>
      <p><strong>Experiencia minima:</strong> 2 años</p>
      <p><strong>Conocimientos en mecanica diesel</strong></p>
      <p><strong>Cualidades:</strong> Responsable, puntual y con actitud proactiva.</p>
    </div>
    <form  id="contact-form">
      <div class="row">
        <label>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>
        <label>
          <input type="text" name="lastName" placeholder="Apellido" required />
        </label>
      </div>
      <div class="column">
        <label>
          <input type="email" name="email" placeholder="Email" required title="Please enter a valid email address (example@domain.com)" />
        </label>
        <label>
          <input type="tel" name="phone" placeholder="Teléfono" required minlength="10" maxlength="10" />
        </label>
      </div>
       <button type="submit" class="light-gold gold-button">Contactar empleador</button>
    </form>
  </div>
</div>

<div id="modalB" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo">
      <div class="line2"></div>
    </div>
  </div>
  <div class="block-title"> 
    <div class="content-block">
      <p> <strong>Ubicación:</strong> Massachusetts</p>
      <p><strong>Pago por hora:</strong> 18 USD</p>
      <p><strong>Experiencia minima:</strong> 2 años</p>
      <p><strong>Conocimientos en mecanica diesel</strong></p>
      <p><strong>Cualidades:</strong> Responsable, puntual y con actitud proactiva.</p>
    </div>
    <form  id="contact-form">
      <div class="row">
        <label>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>
        <label>
          <input type="text" name="lastName" placeholder="Apellido" required />
        </label>
      </div>
      <div class="column">
        <label>
          <input type="email" name="email" placeholder="Email" required title="Please enter a valid email address (example@domain.com)" />
        </label>
        <label>
          <input type="tel" name="phone" placeholder="Teléfono" required minlength="10" maxlength="10" />
        </label>
      </div>
       <button type="submit" class="light-gold gold-button">Contactar empleador</button>
    </form>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('contact-form');
    form.addEventListener('submit', function (e) {
      e.preventDefault();

      if (form.checkValidity()) {
        const name = form.name.value;
        const lastName = form.lastName.value;
        const mensaje = `Hola, mi nombre es ${name} ${lastName}, escribo desde la 95 trucking show. Estoy interesado en la vacante de mecánico.`;
        const url = `https://wa.me/+12015984639?text=${encodeURIComponent(mensaje)}`;
        window.open(url, '_blank');
      } else {
        form.reportValidity();
      }
    });
  });
</script>

