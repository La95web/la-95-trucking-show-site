<style lang="scss">
  @use "../assets/sass/index" as *;

  .back-img {
    background-image: url("../assets/image/Pentagonos.png");
    background-repeat:repeat;
    background-position: cover;
  }

  h2 {
    text-align: left;
  }

  section {
    text-align: center;
  }

  .top-companies {
    padding: 50px 0;
  }

  .section-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: transparent;
    padding-top: 70px;
    padding-bottom: 70px;
  }

  .content-block {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: $regular;
    font-family: $heading;
    border: 2px solid $accent-b-light;
    background-color: $primary;
    border-radius: 8px;
    width: 180px;      
    height: 230px;        
    box-sizing: border-box;
    padding: 16px;
    gap: 10px;
    text-align: center;  
    overflow: hidden;   
    transition: box-shadow 0.2s;
    cursor: pointer;
    p {
      margin: 5px 0;
    }
    strong {
      color: $accent-b-dark;
      font-size: 1.2rem;
    }
  }

  .content-block i {
    color: $accent-b-light;
    font-size: 2rem;
  }


  .content-box {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px auto;
    gap: 10px;
  }

  .content-box img {
    width: 75px;
    height: 75px;
    object-fit: cover;
    display: block;
    margin: 0 auto;
    cursor: pointer;
  }

  .background-block {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 50px;
  }

  .rows {
    position: relative;
    background-image: url('../assets/image/truckersMovil.png');
    width: 100%;
    background-size: cover;
    background-position: center;
    gap: 20px;
    z-index: 1;
  }

  .rows::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.75); 
    z-index: 0;
    border-radius: inherit;
  }

  .rows > * {
    position: relative;
    z-index: 1;
  }

  a {
    color: $accent-b-light;
    font-size: 0.7em;
  }

  a:hover {
    color: white;
  }

  @media (max-width: 768px) {
   .background-block {
      width: 50%;
    }
  }

  @media (min-width: 1024px) {

    h2 {
      text-align: center;
    }

    .content-block:hover strong {
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .content-block {
      position: relative;
    }

    .content-block strong {
      position: absolute;
      top: 50%;
      left: -100%;
      transform: translateY(-50%);
      background-color: #ffd700;
      padding: 8px 12px;
      border-radius: 4px;
      white-space: nowrap;
      transition: left 0.4s ease;
      font-weight: bold;
      color: #333;
    }

    .underline {
      margin: 0 auto;
    }

    .content-block {
      flex-direction: row;
      align-items: left;
      justify-content: left; 
      width: 300px;
      height: 80px;
      padding: 20px;
    }

    .content-box img {
      width: 100px;
      height: 100px;
    }

    .content-box a {
      font-size: 1.2rem;
    }

    .content-box {
     margin: 20px auto;
    }

    .background-block {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      width: 30%;
    }

    .rows {
      position: relative;
      background-image: url('../assets/image/truckers.png');
      width: 100%;
      min-height: 800px;
      background-size: cover;
      background-position: center;
    }
  }
</style>