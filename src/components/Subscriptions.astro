<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    text-align: center;
    background-color: $primary;
  }

  .top-companies {
    padding: 50px 0;
  }

  .section-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: $primary;
    padding-top: 70px;
    padding-bottom: 70px;
  }

  .content-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: $regular;
    font-family: $heading;
    border: 2px solid $accent-b-light;
    background-color: $tertiary;
    border-radius: 8px;
    width: 180px;      
    height: 180px;        
    box-sizing: border-box;
    padding: 16px;
    gap: 10px;
    text-align: center;  
    overflow: hidden;   
    transition: box-shadow 0.2s;
  }

  .content-block i {
    color: $accent-b-light;
    font-size: 2rem;
  }


  .content-box {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px auto;
    gap: 10px;
  }

  .content-box img {
    width: 75px;
    height: 75px;
    object-fit: cover;
    display: block;
    margin: 0 auto;
    cursor: pointer;
  }

  .background-block {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 50px;
  }

  .rows {
    position: relative;
    background-image: url('../assets/image/truckersMovil.png');
    width: 100%;
    background-size: cover;
    background-position: center;
    gap: 20px;
    z-index: 1;
  }

  .rows::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.75); 
    z-index: 0;
    border-radius: inherit;
  }

  .rows > * {
    position: relative;
    z-index: 1;
  }

  // form styles
 .subscription-form {
    max-width: 800px;
    margin: 30px auto 0 auto;
    background: $tertiary;
    padding: 30px 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .form-group {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="tel"] {
    flex: 1 1 180px;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid $accent-b-light;
    font-size: 1rem;
    background: #fff;
  }

  .checkbox-group {
    align-items: center;
    gap: 8px;
    justify-content: flex-start;
  }

  .checkbox-group label {
    font-size: 0.95rem;
  }

  .button-group {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    border: none;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    background: $accent-b-light;
    color: #fff;
    transition: background 0.2s;
  }

  .btn.mensual {
    background: $accent-c-light;
    padding: 12px 80px;
  }

  .btn.anual {
    background: $primary;
  }

  .btn:hover {
    filter: brightness(0.95);
  }

  a {
    color: $accent-b-light;
    font-size: 0.7em;
  }

  a:hover {
    color: white;
  }

  @media (max-width: 768px) {
   .background-block {
      width: 50%;
    }
  }

  @media (min-width: 1024px) {

    .content-block {
      flex-direction: row;
      align-items: left;
      justify-content: left; 
      width: 300px;
      height: 80px;
      padding: 20px;
    }

    .content-box img {
      width: 100px;
      height: 100px;
    }

    .content-box a {
      font-size: 1.2rem;
    }

    .content-box {
     margin: 20px auto;
    }

    .background-block {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      width: 30%;
    }

    .rows {
      position: relative;
      background-image: url('../assets/image/truckers.png');
      width: 100%;
      min-height: 800px;
      background-size: cover;
      background-position: center;
    }
  }
</style>