  // form styles
 .subscription-form {
    max-width: 800px;
    margin: 30px auto 0 auto;
    background: $tertiary;
    padding: 30px 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .form-group {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="tel"] {
    flex: 1 1 180px;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid $accent-b-light;
    font-size: 1rem;
    background: #fff;
  }

  .checkbox-group {
    align-items: center;
    gap: 8px;
    justify-content: flex-start;
  }

  .checkbox-group label {
    font-size: 0.95rem;
  }

  .button-group {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    border: none;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    background: $accent-b-light;
    color: #fff;
    transition: background 0.2s;
  }

  .btn.mensual {
    background: $accent-b-light;
