    </div>
    <div class="form-group">
      <input type="email" name="email" placeholder="Email" required />
      <input type="tel" name="telefono" placeholder="Teléfono" required />
    </div>
    <div class="form-group checkbox-group">
      <input type="checkbox" id="terminos" name="terminos" required />
      <label for="terminos">
      <a href="/terminos" target="_blank">Acepto los términos y condiciones</a>
      </label>
    </div>
    <div class="form-group button-group">
      <button type="submit" class="btn mensual">Suscripción mensual $5</button>
      <button type="submit" class="btn anual">Suscripción anual $45 (ahorra un 25%)</button>
    </div>
  </form>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const modal = document.getElementById('imgModal');
    const modalImg = document.getElementById('modalImg');
    const closeBtn = document.querySelector('.modal .close');
    document.querySelectorAll('.modal-img').forEach(img => {
      img.addEventListener('click', function () {
        modal.style.display = 'flex';
        modalImg.src = this.src;
      });
    });
    closeBtn.addEventListener('click', function () {
      modal.style.display = 'none';
    });
    modal.addEventListener('click', function (e) {
      if (e.target === modal) modal.style.display = 'none';
    });
  });
</script>


<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    text-align: center;
    padding: 50px 0;
    background-color: $primary;
  }

  .section-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: $primary;
    padding-top: 70px;
    padding-bottom: 70px;
    margin: 0 5%;
  }

  .content-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: $regular;
    font-family: $heading;
    border: 2px solid $accent-b-light;
    background-color: $tertiary;
    border-radius: 8px;
    width: 180px;      
    height: 180px;        
    box-sizing: border-box;
    padding: 16px;
    gap: 10px;
    text-align: center;  
    overflow: hidden;   
    transition: box-shadow 0.2s;
  }

  .content-block i {
    color: $accent-b-light;
    font-size: 2rem;
  }

  .content-block i {
    color: $accent-b-light;
    font-size: 2rem;
  }

  .content-box {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  .content-box img {
    width: 160px;
    height: 160px;
    object-fit: cover;
    border-radius: 0%;
    border: 5px solid $tertiary;
    display: block;
    margin: 0 auto;
    cursor: pointer;
  }
  //modal img
  .modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.7);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    max-width: 80vw;
    max-height: 80vh;
    border-radius: 16px;
    box-shadow: 0 2px 24px rgba(0,0,0,0.2);
  }

  .close {
    position: absolute;
    top: 40px;
    right: 60px;
    color: #fff;
    font-size: 3rem;
    font-weight: bold;
    cursor: pointer;
    z-index: 10000;
  }

  // form styles
 .subscription-form {
    max-width: 800px;
    margin: 30px auto 0 auto;
    background: $tertiary;
    padding: 30px 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .form-group {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="tel"] {
    flex: 1 1 180px;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid $accent-b-light;
    font-size: 1rem;
    background: #fff;
  }

  .checkbox-group {
    align-items: center;
    gap: 8px;
    justify-content: flex-start;
  }

  .checkbox-group label {
    font-size: 0.95rem;
  }

  .button-group {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    border: none;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    background: $accent-b-light;
    color: #fff;
    transition: background 0.2s;
  }

  .btn.mensual {
    background: $accent-c-light;
    padding: 12px 80px;
  }

  .btn.anual {
    background: $primary;
  }

  .btn:hover {
    filter: brightness(0.95);
  }

  a {
    color: $accent-b-light;
    text-decoration: underline;
    font-size: 0.9em;
  }

  @media (min-width: 1024px) {

    .content-block {
      flex-direction: row;
      align-items: left;
      justify-content: left;
      width: 350px;      
      height: 70px;        
    } 

    .content-box img {
      width: 220px;
      height: 220px;
    }
  }
</style>