---
const {title, paragraph} = Astro.props;
import logo2 from '../assets/image/logoDesktop.webp';
---

<div class="podcasts-container">
  <section> 
    <h2>{title}</h2>
    <div class="underline"></div>
    <p>{paragraph}</p>
  </section>
  <figure>
    <img src={logo2.src} alt="logo">
  </figure>
</div>

<style lang="scss">
  @use "../assets/sass/index" as *;

  .podcasts-container P {
    text-align: left;
    margin: 0 5%;
    padding-top: 20px;
  }

  .podcasts-container {
    background-color: $primary;
    padding-top: 20px;
    padding-bottom: 1px;
  }

  .podcasts-container {
    display: flex;
    flex-direction: column;
    background-color: $primary;
    padding-top: 20px;
    padding-bottom: 70px;
  }

  figure {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  figure img {
    width: 330px;
    height: auto;
  }

  @media (min-width: 1024px) {

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    figure img {
      width: 500px;
      height: auto;
      margin-left: 72px ;
    }

    section {
      padding: 50px;

      h2 {
        font-size: 3rem;
      }
      p {
        font-size: 1.25rem;
      }
      a {
        font-size: 2rem;
      }
      .underline {
        width: 25%;
      }
    }
      
    .podcasts-container {
      flex-direction: row-reverse;
      justify-content: center;
      align-items: center;
      background-image: url('../assets/image/FireVector.webp');
      background-repeat: no-repeat;
      background-position: calc(100% - 100px) center;
    }
  }
</style>