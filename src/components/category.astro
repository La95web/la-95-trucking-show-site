---
import image1 from '../assets/image/truckdriver.jpg';
import image2 from '../assets/image/choferes.jpg';
import image3 from '../assets/image/real.jpg';
import image4 from '../assets/image/dispatcher.png';
import image5 from '../assets/image/otros.jpg';
const {title, text1, text2, text3, text4, text5, button} = Astro.props;
---
<section>
  <div class="center"> 
    <h2>{title}</h2>
    <div class="underlineshort"></div>
  </div>
  <div class="flexbox">
    <div class="card">
      <div> 
        <img src={image1.src} alt="Card Image" class="card-image">
        <div class="card-content">
          <p class="card-description">{text1}</p>
          <div class="light-gold gold-button">
            <a href="/chofer/">{button}</a>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div> 
        <img src={image2.src} alt="Card Image" class="card-image">
        <div class="card-content">
          <p class="card-description">{text2}</p>
          <div class="light-gold gold-button">
            <a href="/owneroperator/">{button}</a>
          </div>
        </div>
     </div>
    </div>  
    <div class="card">
      <div> 
        <img src={image3.src} alt="Card Image" class="card-image">
        <div class="card-content">
          <p class="card-description">{text3}</p>
          <div class="light-gold gold-button">
            <a href="/rentas/">{button}</a>
          </div>
        </div>
     </div>
    </div>  
    <div class="card">
      <div> 
        <img src={image4.src} alt="Card Image" class="card-image">
        <div class="card-content">
          <p class="card-description">{text4}</p>
          <div class="light-gold gold-button">
            <a href="/dispatcher/">{button}</a>
          </div>
        </div>
     </div>
    </div>  
    <div class="card">
      <div> 
        <img src={image5.src} alt="Card Image" class="card-image">
        <div class="card-content">
          <p class="card-description">{text5}</p>
          <div class="light-gold gold-button">
            <a href="/otros/">{button}</a>
          </div>
        </div>
     </div>
    </div>    
  </div>
</section>

<style lang="scss">
  @use '../assets/sass/index' as *;

  a{
    font-size: 1rem;
    color: $accent-b-dark;
    padding: 0rem 1rem;
  }

  section {
    background-color: $primary;
  }
  
  .flexbox {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  .card {
    position: relative;
    width: 170px;
    margin: 0 5%;
    background-color: $tertiary;
    border-radius: 8px;
    overflow: hidden;
    margin: 30px 0;
    display: flex;
    flex-direction: column;
  }

  .card-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
  }

  h2 {
    padding-top: 50px;
  }

  .underlineshort {
    width: 120px;
    height: 2px;
    background-color: $accent-b-dark;
    margin: 0 5%;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    height: 10%; 
    padding-bottom: 20px;

    p{
      margin: 10px;
    }
  }

  .card-description {
    margin-top: 0;
    min-height: 60px; 
    flex: 1; 
    font-size: 1rem;
    text-align: center;
  }

  .light-gold {
    width: 80%;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    transition: background-color 0.3s, box-shadow 0.3s;

    button, #openModal {
      color: $accent-b-dark;
      font-size: 1rem;
      font-weight: $regular;
      font-family: $heading;
      background-color: transparent;
      padding: 0rem 1.5rem; 
      cursor: pointer;
    }
  }

  .light-gold.gold-button {
    background-color: $tertiary;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 10%);
    border: 2px solid $accent-b-dark;
  }

  .gold-button {
    background-color: $accent-b-light;
  }

  .gold-button:hover {
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 20%);
  }

  @media (min-width: 1024px) {

    .flexbox {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: row;
      margin: 50px 5%;
    }

    h2 {
      font-size: 3rem;
      text-align: center;
      padding-top: 40px;
    }

    .center {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-bottom: 20px;
    }

    .card {
      margin: 0 2%;
      margin-bottom: 30px;
    }

    .small-image {
      top: 355px;
      left: 60%;
      width: 30%;
    }

    .underlineshort {
      width: 10%;
      height: 2px;
      background-color: $accent-b-dark;
      margin: 0 5%;
    }
    
    .light-gold {
      width: 145px; 
      height: 40px;
      border-radius: 8px;
      padding: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: background-color 0.3s, box-shadow 0.3s;
    }

    #openModal {
      padding: 1.5rem 1.5rem; 
    }
  }
</style>
