---
import money from "../scripts/money";
const { title, paragraph, primarybutton } = Astro.props;

const products = await fetch(import.meta.env.PUBLIC_API_BASE_URL.concat('products'), {
  method: 'GET',
  headers: {
    'Accept': 'application/json',
  },
}).then((response) => response.json());
---

<article>
  <h2>{title}</h2>
  <div class="underline"></div>
  <p>{paragraph}</p>
</article>
<section>
  {products.map((product, index) => (
    <figure id={`product-${index}`}>
      <img src={product.main_image_url} alt={product.title}/>
      <h3>{product.title}</h3>
      <div class="underlineSecondary"></div>
      <p>{product.description}</p>
      <p>{money(product.price)}</p>
      <div class="inline">
        <div class="light-button dark-button">
          <button class="add-to-cart-button" data-index={index}>{primarybutton}</button>
        </div>
      </div>
    </figure>
  ))}
</section>

<style lang="scss">
  @use "../assets/sass/index" as*;

  body {
    background-color: $primary;
  }

  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding-top: 20px;
  }

  .underline {
    width: 120px;
  }

  section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
    gap: 60px;
  }

  figure {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    width: 70%;
    max-width: 300px;
  }

  .underlineSecondary{
    width: 241px;
    height: 2px;
    background-color: $accent-b-dark;
    justify-content: left;
    margin-top: 0px;
    border-radius: 2px;
    margin: 0 5%; 
  }

  p{
    text-align: center;
  }

  img {
    width: 100%;
    aspect-ratio: 3 / 2;
  }

  .inline {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  button {
    border: none;
    background-color: transparent;
    font-size: 1.5rem;
    font-family: $heading;
    font-weight: $regular;
    cursor: pointer;
  }
  
  .light-button.dark-button {
    background-color: $accent-b-dark;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 20%);
  }

  .darkness-button {
    background-color: transparent;
    border: 2px solid $accent-b-dark;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 20%);
  }

  .darkness-button button {
    color: $accent-b-dark;
  }
  
  .light-button:hover {
    background-color: $accent-b-light;
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 25%);
  }

  .spread:hover {
    background-color: transparent;
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 25%);
  }

  @media only screen and (width >= 1024px){

    section {
    gap: 20px;
  }
  }
  
</style>