<style lang="scss">
  @use "../assets/sass/index" as *;

  .content-block {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  figure {
    display: flex;
    justify-content: center;
    margin: 1rem 0;
  }

  img.logo {
    width: 300px;
  }

  section {
    display: flex;
    flex-wrap: wrap;          /* permite que los cuadros bajen a la siguiente fila */
    justify-content: center;  /* centra las columnas en la pantalla */
    gap: 1rem;                /* espacio entre cuadros */
    margin: 2rem auto;
  }

  section p {
    flex: 1 1 45%;            /* en móvil: aprox 2 columnas (45% cada uno) */
    max-width: 45%;           /* asegura que no se estiren demasiado */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border: 2px solid $accent-b-dark;
    color: $accent-b-dark;
    border-radius: 8px;
    padding: 1rem;
    min-height: 80px;
    font-size: 1rem;
  }

  /* Tablet: 3 columnas */
  @media (min-width: 768px) {
    section p {
      flex: 1 1 30%;
      max-width: 30%;
    }
  }
  
  .underline {
    margin: 0 auto;
  }

  nav ul{
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
  }

  .section {
    display: flex;
    flex-direction: column;
    background-color: $primary;
  }

  .title-content {
   text-align: center;
   padding-top: 50px;
    p{
       margin: 20px 5%;
    }
  }

  .logo {
    display: block;
    margin: 20px auto;
    width: 450px;
    object-fit: contain;
  }

  a {
    color: $secondary;
  }

  li:hover {
    text-decoration:underline;
    text-decoration-color: $accent-b-light;
    text-underline-offset: 13px;
    text-decoration-thickness: 3px;
  }

  .section-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30px;
  }

  .light-gold {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 155px;
    border-radius: 8px;
    padding: 12px 20px;
    transition: background-color 0.3s, box-shadow 0.3s;
  }

  button{
    color: $accent-b-dark;
    font-weight: $regular;
    font-family: $heading;
    cursor: pointer;
    -webkit-appearance: none;
    appearance: none;
    background-color: $tertiary;
    font-size: 1.5rem;
    line-height: 1;
    white-space: nowrap;
    border: none;
  }

  .light-gold.gold-button {
    background-color: $tertiary;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 35%);
    border: 2px solid $accent-b-dark;
    margin: 20px 0 30px;
  }

  .gold-button {
    background-color: $accent-b-light;
  }

  .gold-button:hover {
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 40%);
  }

   ul{
    font-family: $text;
    font-size: 1.2rem;
    line-height: 2.5;
    font-weight: $regular;
    color: white;
    padding: 0;
  }

  i{
    color: $accent-b-dark;
    margin: 10px;
  }

  li {
    margin: 10px;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;

    li {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      margin-bottom: 12px;
      font-family: $text;
      font-size: 16px;
      line-height: 1.5;
      color: white;

      i {
        font-size: 20px;
        color: #FFCC4D;
        flex-shrink: 0;
        margin-top: 4px;
      }

      span {
        display: block;
        flex: 1;
      }
    }
  }

  a{
    font-size: 1.2rem;
  }

  .content-flex {
    display: flex;
    flex-direction: column;
    justify-content: center;      /* Centra horizontalmente */
    align-items: stretch;         /* Hace que ambos hijos tengan el mismo alto */
    gap: 5rem;                    /* Espacio entre los bloques */
    padding: 2rem;
  }

  .content-flex > div {
    flex: 1;                      /* Ambos ocupan el mismo ancho */
    background: $primary;             /* Opcional */
    padding: 2rem;
    border-radius: 10px;         
    display: flex;
    flex-direction: column;       /* Para que el contenido interno fluya vertical */
    justify-content: center;      /* Centra verticalmente el contenido */
  }
  @media (min-width: 1024px) {

    .content-flex {
      flex-direction: row;
    }


     section p {
      flex: 1 1 22%;
      max-width: 22%;
    }

    .section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      justify-content: space-between;

      h2 {
        font-size: 3rem;
      }
      p {
        font-size: 1.25rem;
      }
    }

    ul {
      gap: 50px;
      margin: 0;
    }

    a{
      font-size: 2.5rem;
    }

    nav {
      margin: 0 15%;
    }

    .light-gold {
      width: 178px;
    }
  }
</style>