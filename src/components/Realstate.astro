---
const { language = 'es', title, button, modalbutton } = Astro.props;

const languageMap = {
  en: 'english',
  es: 'spanish',
};
const currentLanguage = languageMap[language] ?? 'spanish';

const realstates = await fetch(import.meta.env.PUBLIC_API_BASE_URL.concat('realstates'),
  {
    method: 'GET',
    headers: {
      Accept: 'application/json',
    },
  }
).then((response) => response.json());
---

<h2>{title}</h2>
<div class="underline"></div>

{realstates.length > 0 ? (
  realstates
    .filter((realstate) => realstate.language === currentLanguage)
    .sort(
      (a, b) =>
        new Date(b.uploaded_at).getTime() -
        new Date(a.uploaded_at).getTime()
    )
    .map((realstate) => (
      <section>
        <div class="flex-content">
          <div>
            <img src={realstate.thumbnail_url} alt="room" />
          </div>
          <div>
            <div class="content">
              <p>
                <strong>{realstate.price}</strong>
              </p>
              <div class="flex1">
                <div class="flex-content">
                  <i class="ph ph-bed"></i>
                  <p>{realstate.rooms}</p>
                </div>
                <div class="flex-content">
                  <i class="ph ph-wifi-high"></i>
                  <p>{realstate.internet}</p>
                </div>
                <div class="flex-content">
                  <i class="ph ph-letter-circle-p"></i>
                  <p>{realstate.parking}</p>
                </div>
                <div class="flex-content">
                  <i class="ph ph-couch"></i>
                  <p>{realstate.furniture}</p>
                </div>
              </div>
              <p>{realstate.description}</p>
              <div class="flex">
                <p>
                  <b>{realstate.location}</b>
                </p>
                <div class="light-gold gold-button">
                  <button
                    class="openModal" data-modal={`modal-${realstate.id}`}>
                    {button}
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    ))
) : (
  <p class="no-data">No hay rentas disponibles en este momento</p>
)}

{realstates.length > 0 &&
  realstates
    .filter((realstate) => realstate.language === currentLanguage)
    .sort((a, b) => new Date(b.uploaded_at).getTime() - new Date(a.uploaded_at).getTime())
    .map((realstate) => (
      <div id={`modal-${realstate.id}`} class="modal">
        <div class="close-menu-container">
          <span class="close"></span>
          <div class="rombo">
            <div class="line2"></div>
          </div>
        </div>
        <div class="block-title">
          <div class="content-block">
            <p>Llena el formulario para que podamos ponernos en contacto contigo.</p>
          </div>
          <form id={`contact-form-${realstate.id}`} data-location={realstate.location}>
            <div class="row">
              <label>
                <input type="text" name="name" placeholder="Nombre" required />
              </label>
              <label>
                <input type="text" name="lastName" placeholder="Apellido" required />
              </label>
            </div>
            <div class="column">
              <label>
                <input type="email" name="email" placeholder="Email" required title="Please enter a valid email address (example@domain.com)" />
              </label>
              <label>
                <input type="tel" name="phone" placeholder="Teléfono" required minlength="10" maxlength="10" />
              </label>
            </div>
            <button type="submit" class="light-gold gold-button">
              {modalbutton}
            </button>
          </form>
        </div>
      </div>
    ))}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const forms = document.querySelectorAll('form[id^="contact-form-"]');
    forms.forEach((form) => {
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        if (form.checkValidity()) {
          const name = form.name.value;
          const lastName = form.lastName.value;
          const location = form.dataset.location;
          const mensaje = `Hola, mi nombre es ${name} ${lastName}, escribo desde la web de la 95 trucking show. Estoy interesado en la habitación ubicada en ${location}, ¿me puede brindar más información?`;
          const url = `https://wa.me/+12015984639?text=${encodeURIComponent(
            mensaje
          )}`;
          window.open(url, '_blank');
        } else {
          form.reportValidity();
        }
      });
    });
  });
</script>
