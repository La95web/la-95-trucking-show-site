---
const {paragraph, name, lastname, phone, button } = Astro.props;
---

<div id="modalD" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo">
      <div class="line2"></div>
    </div>
  </div>
  <section>
    <p>{paragraph}</p>
      <form  id="contact-form-d">
        <div class="row">
          <label>
            <input type="text" name="name" placeholder={name} required />
          </label>
          <label>
            <input type="text" name="lastName" placeholder={lastname} required />
          </label>
        </div>
        <div class="column">
          <label>
            <input type="email" name="email" placeholder="Email" required title="Please enter a valid email address (example@domain.com)" />
          </label>
          <label>
            <input type="text" name="phone" placeholder={phone} required minlength="10" maxlength="10" />
          </label>
        </div>
        <button type="submit" class="light-gold gold-button">{button}</button>
      </form>
    </div>
  </section>
</div>

<script>
   document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('contact-form-d');
    form.addEventListener('submit', function (e) {
      e.preventDefault();
      if (form.checkValidity()) {
        const name = form.name.value;
        const lastName = form.lastName.value;
        const mensaje = `Hola, mi nombre es ${name} ${lastName}, escribo desde la web de la 95 trucking show. Me gustaria tener mas informacion del camion en venta.`;
        const url = `https://wa.me/+12015984639?text=${encodeURIComponent(mensaje)}`;
        window.open(url, '_blank');
      } else {
        form.reportValidity();
      }
    });
  });
</script>

<style lang="scss">
