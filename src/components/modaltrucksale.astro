---
const { title, paragraph1, year, millas, km, paragraph2, paragraph3, type1, color1, type2, color2,
  name, lastname, phone, button
 } = Astro.props;
---

<div id="modalD" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo">
      <div class="line2"></div>
    </div>
  </div>
  <div class="block-title"> 
     <h4>{title}</h4>
      <div class="datos-camion">
        <div class="fila">
          <div class="etiqueta">{paragraph1}</div>
          <div class="valor">{year}</div>
        </div>
        <div class="fila">
          <div class="etiqueta">{millas}</div>
          <div class="valor">{km}</div>
        </div>
        <div class="fila">
          <div class="etiqueta">{paragraph2}</div>
          <div class="valor">{paragraph3}</div>
        </div>
        <div class="fila">
          <div class="etiqueta">{type1}</div>
          <div class="valor">{color1}</div>
        </div>
        <div class="fila">
          <div class="etiqueta">{type2}</div>
          <div class="valor">{color2}</div>
        </div>
      </div>
    <form  id="contact-form-d">
      <div class="row">
        <label>
          <input type="text" name="name" placeholder={name} required />
        </label>
        <label>
          <input type="text" name="lastName" placeholder={lastname} required />
        </label>
      </div>
      <div class="column">
        <label>
          <input type="email" name="email" placeholder="Email" required title="Please enter a valid email address (example@domain.com)" />
        </label>
        <label>
          <input type="text" name="phone" placeholder={phone} required minlength="10" maxlength="10" />
        </label>
      </div>
       <button type="submit" class="light-gold gold-button">{button}</button>
    </form>
  </div>
</div>

<script>
   document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('contact-form-d');
    form.addEventListener('submit', function (e) {
      e.preventDefault();
      if (form.checkValidity()) {
        const name = form.name.value;
        const lastName = form.lastName.value;
        const mensaje = `Hola, mi nombre es ${name} ${lastName}, escribo desde la 95 trucking show. Me gustaria tener mas informacion del camion en venta.`;
        const url = `https://wa.me/+12015984639?text=${encodeURIComponent(mensaje)}`;
        window.open(url, '_blank');
      } else {
        form.reportValidity();
      }
    });
  });
</script>

