---
const { term1, term2, term3, term4, term5, term6, term7, term8, term9, term10,
  cond1, cond2, cond3, cond4, cond5, cond6, cond7, cond8, cond9, cond10, subscription1, subscription2
 } = Astro.props;
---

<div id="modalA" class="modal">
  <div class="close-menu-container">
  </div> 
  <div class="content-block">
    <h2>Terminos y condiciones</h2>
    <div class="underline"></div>
    <ol>
      <li>{term1}</li>
      <li>{term2}</li>
      <li>{term3}</li>
      <li>{term4}</li>
      <li>{term5}</li>
      <li>{term6}</li>
      <li>{term7}</li>
      <li>{term8}</li>
      <li>{term9}</li>
      <li>{term10}</li>
    </ol>
    <a class="btn anual" target="_blank" href="/checkoutMonthly">aceptar y comprar</a>
  </div>
</div>
<div id="modalB" class="modal">
  <div class="close-menu-container">
  </div> 
  <div class="content-block">
    <h2>Terminos y condiciones</h2>
    <div class="underline"></div>
    <ol>
      <li>{cond1}</li>
      <li>{cond2}</li>
      <li>{cond3}</li>
      <li>{cond4}</li>
      <li>{cond5}</li>
      <li>{cond6}</li>
      <li>{cond7}</li>
      <li>{cond8}</li>
      <li>{cond9}</li>
      <li>{cond10}</li>
    </ol>
    <a class="btn mensual" target="_blank" href="" >aceptar y comprar</a>
  </div>
</div>
<style lang="scss">
  @use "../assets/sass/index" as *;

  .modal {
    display: none;
    flex-direction: column; 
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 99;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: none;
    backdrop-filter: blur(10px);
    background-color: rgba($tertiary, 0.95);
  }

  h2 {
    text-align: center;
  }

  .content-block {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 2px solid $accent-b-dark;
    padding: 20px;
    border-radius: 8px;
    width: 90%;
    overflow-y: auto;
    background-color: rgba(20, 20, 20, 0.9);
  }

  li {
    list-style-type: decimal;
    color: white;
    margin: 10px 0;
    line-height: 1.2rem;
    font-size: .80rem;
  }

  .btn {
    width: 70%;
    border-radius: 8px;
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: background-color 0.3s, box-shadow 0.3s;
  }

  a {
    color: $accent-b-dark;
    font-size: 1.2rem;
    font-weight: $regular;
    font-family: $heading;
    background-color: transparent;
    cursor: pointer;
  }

  .btn.anual, .mensual {
    background-color: $tertiary;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 35%);
    border: 2px solid $accent-b-dark;
    margin: 20px 0 30px;
  }

  .btn:hover {
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 40%);
  }

  @media (min-width: 1024px) {
  .modal {
    padding: 0;
    background: rgba(20, 20, 20, 0.5);
    z-index: 99;
  }

  .content-block {
    width: 100%;
    max-width: 1000px;
    margin-top: 0;
  }

  ol {
    max-width: 80%;
  }

  .btn {
    width: 30%;
  } 
}
</style>