---
const audios = await fetch(import.meta.env.PUBLIC_API_BASE_URL.concat('audios'), {
  method: 'GET',
  headers: {
    'Accept': 'application/json',
  },
}).then((response) => response.json());
---
<div class="section">
  <nav>
    <ul>
      <li><a href="/audio/">audios</a></li>
       <li><a href="/podcast/">podcast</a></li>
    </ul>
  </nav>
  <div class="search-bar section">
    <input type="search" id="searchInput" placeholder="Buscar episodio..." />
  </div>
</div>
<div id="noResults" style="text-align: center; margin-top: 1rem;"> <h3>No se encontraron resultados.</h3> </div>

<div class="podcast-container">
  <section id="podcastList">
    {audios.length > 0 && audios
    .sort((a, b) => {
    const dateDiff =
      new Date(b.uploaded_at).getTime() - new Date(a.uploaded_at).getTime();
      if (dateDiff !== 0) {
      return dateDiff;
      }
      return b.id - a.id;
    })
    .map((audio) => (
      <div class="podcastList">
        <p>{audio.title}</p>
        <audio src={audio.main_audio_url} controls></audio>
      </div>
    ))}
  </section>
</div>

  <div class="pagination">
    <button class="light-button yellow-button" id="toggleBtn">Siguiente »</button>
    <span id="pageInfo"></span>
  </div>
</div>

<script>
  const ITEMS_PER_PAGE = 6;
  let currentPage = 1;
  let filteredItems = [];

  const podcastList = document.getElementById("podcastList");
  const searchInput = document.getElementById("searchInput");
  const podcastItems = Array.from(podcastList.getElementsByClassName("podcastList"));
  const toggleBtn = document.getElementById("toggleBtn");
  const pageInfo = document.getElementById("pageInfo");

  filteredItems = podcastItems;

  function render() {
    const totalPages = Math.ceil(filteredItems.length / ITEMS_PER_PAGE);
    currentPage = Math.min(currentPage, totalPages || 1);

    podcastItems.forEach(item => item.style.display = "none");

    const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
    const endIndex = startIndex + ITEMS_PER_PAGE;

    filteredItems.slice(startIndex, endIndex).forEach(item => {
      item.style.display = "block";
    });

    const noResults = document.getElementById("noResults");
    noResults.style.display = filteredItems.length === 0 ? "block" : "none";

    pageInfo.textContent = `Página ${currentPage} de ${totalPages}`;

    // Cambiar texto del botón según la página
    if (currentPage < totalPages) {
      toggleBtn.textContent = "Siguiente »";
    } else if (currentPage === totalPages && totalPages > 1) {
      toggleBtn.textContent = "« Anterior";
    } else {
      toggleBtn.style.display = "none"; // Oculta si solo hay una página
    }
  }

  toggleBtn.addEventListener("click", () => {
    const totalPages = Math.ceil(filteredItems.length / ITEMS_PER_PAGE);

    if (currentPage < totalPages) {
      currentPage++;
    } else if (currentPage === totalPages && totalPages > 1) {
      currentPage--;
    }

  render();
  });

  searchInput.addEventListener("input", () => {
    const query = searchInput.value.toLowerCase();

    filteredItems = podcastItems.filter(item => {
      const title = item.querySelector("p").textContent.toLowerCase();
      return title.includes(query);
    });

    currentPage = 1;
    toggleBtn.style.display = "inline-block"; // Asegura que reaparezca tras búsqueda
    render();
  });

  render();
  
</script>

