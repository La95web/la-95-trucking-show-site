---
const {title, paragraph, button} = Astro.props;
import NewImg from "../assets/image/logoDesktop.webp";
const response = await fetch('https://randomuser.me/api/');
const data = await response.json();
const newData = data.results[0];
---

<div class="section">
  <nav>
    <ul>
      <li><a href="/noticias/">noticias</a></li>
      <li><a href="/tips/">tips</a></li>
    </ul>
  </nav>
  <div class="section-input">
    <input type="search" id="site-search" name="" class="search-input" placeholder="Search...">
  </div>
</div>

<div class="podcasts-container" id="dynamic-content">
  <div>
    <h2>{title}</h2>
    <div class="underline"></div>
    <p>{paragraph}</p>
  </div>
  <div class="content-item">
    <div class="section-content-tips news-item" id="content">
      <div>
        <h4>{newData.name.first}</h4>
