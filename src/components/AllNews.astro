<style lang="scss">
  @use "../assets/sass/index" as *;

  #result {
    display: none;
    text-align: center;
    align-items: center;
    padding-top: 50px;
  }

  .section {
    display: flex;
    flex-direction: column;
  }

  ul {
    display: flex;
    justify-content: space-around;
    margin: 20px;
  }

  a {
    color: $secondary;
  }

  li:hover {
    text-decoration:underline;
    text-decoration-color: $accent-b-light;
    text-underline-offset: 13px;
    text-decoration-thickness: 3px;
  }

  input {
    background-color: $accent-b-dark;
    border: none;
    width: 100%;
    height: 60px;
    background-image: url("../assets/image/lupa.png");
    justify-content: center;
    align-items: center;
    background-repeat: no-repeat;
    background-position: calc(100% - 5%) center;
    padding-left: 5%;
    padding-right: 5%;
  }

  input::placeholder { 
    width: 85%;
    border-bottom: 1px solid #000;
    padding-bottom: 10px;
    font-family: $text;
    font-weight: $regular;
    font-size: 1rem; 
  }

  input[type="search"]::-webkit-search-cancel-button{
    -webkit-appearance: none;
    appearance: none;
  }

  //end

  .podcasts-container P {
    text-align: left;
    margin: 0 5%;
    padding-top: 20px;
    font-size: 1rem;
  }

  .podcasts-container {
    background-color: $primary;
    padding-top: 20px;
    padding-bottom: 1px;
  }

  .podcasts-container {
    display: flex;
    flex-direction: column;
    background-color: $primary;
    padding-top: 20px;
  }

  section {
    display: flex;
    flex-direction: column;
    background-color: $primary;
  }
  
  .section-content-tips{
    display: flex; 
    flex-direction: row-reverse;
    justify-content: left;
    text-align: left;
    background-color: $primary;
    padding-top: 20px;

    p{
      padding: 0 40px 0 0;
    }
  }
  
  span {
    color: rgba($secondary, 80%);
    font-family: $text;
    font-weight: $regular;
    font-size: 1.25rem;
    padding-top: 10px;
  }
  
  h4 {
    font-family: $heading;
    font-weight: $regular;
    font-size: 2rem;
    margin: 0;
    color: $secondary;
  }

  .image {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 5%;
    box-shadow: 0px 4px 4px 0px rgba(black, 30%);
  }

  img {
    width: 146px;
    height: auto;
  }

  .underlineNews {
    width: 90%;
    max-width: 235px;
    height: 2px;
    background-color: $accent-b-dark;
    justify-content: left;
    align-items: left;
    margin-top: 0px;
    border-radius: 2px; 
  }

  .section-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30px;
  }

  .light-gold {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 145px; 
    height: 40px;
    border-radius: 8px;
    padding: 20px;
    transition: background-color 0.3s, box-shadow 0.3s;
  }

   button{
    color: $accent-b-dark;
    font-size: 1.5rem;
    font-weight: $regular;
    font-family: $heading;
    background-color: $tertiary;
    cursor: pointer;
  }

  .light-gold.gold-button {
    background-color: $tertiary;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 35%);
    border: 2px solid $accent-b-dark;
    margin: 20px 0 30px;
  }

  .gold-button {
    background-color: $accent-b-light;
  }

  .gold-button:hover {
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 40%);
  }

  @media (min-width: 1024px) {

    .section {
      flex-direction: row;
      align-items: center;
      text-align: center;
      justify-content: space-between;

      h2 {
        font-size: 3rem;
      }
      p {
        font-size: 1.25rem;
      }
      a {
        font-size: 2rem;
      }
    }

    nav ul {
      gap: 250px;
      margin: 0 250px;
    }

    .section-input {
      width: 572px;
    }

    ul {
      margin: 0;
    }

    .section-content-tips p {
      margin:  10px 150px 0 0;
    }

    .light-gold {
      width: 178px; 
    }

    .section-content-tips:hover {
      padding-left: 45px;
      transition: padding-left 0.3s ease-in-out;
      cursor: pointer;
    }
  }
</style>