---
const {images} = Astro.props;
---

<header>
  <div class="content-header">
    <img src={images.src} alt="image">
    <h1>nosotros</h1>
  </div>
</header>

<style lang="scss">
  @use '../assets/sass/index' as *;

  header {
    position: relative;
    width: 100%;
    aspect-ratio: 402 / 226;  //es el tama√±o problema es la imagen
    overflow: hidden;
    
  }

  .content-header {
    display: flex;
    // width: 300%; 
    height: 100%;
    
  }
  
  h1 {
    @include center-contents;
    position: absolute;
    flex-direction:unset;
    align-items: end;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba($primary, 30%), rgba($primary, 50%), rgba($primary, 100%));
    margin: 0;
    font-family: $heading;
    font-weight: $regular;
    font-size: 4rem;
  }

  @media (min-width: 1024px) {
    h1 {
      font-size: 11rem;
    }

    header {
    position: relative;
    width: 100%;
    aspect-ratio: 1440 / 700;
    overoflow-x: hidden;
    overflow: hidden;
  }
  }
</style>