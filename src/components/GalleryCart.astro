---
import Jeans from "../assets/image/jeans.png";
import Jacket from "../assets/image/jacket.png";
import Left from "../assets/image/left.png";
import Right from "../assets/image/right.png";
const {title, paragraph, primarybutton, secondarybutton} = Astro.props;
---
<section> 
  <div class="arrow left-arrow" id="leftArrow"><img src={Left.src} alt="Left"></i></div>
  <div class="arrow right-arrow" id="rightArrow"><img src={Right.src} alt="right"></div>
  <div class="gallery-container">
    <article>
      <h2>{title}</h2>
      <div class="underline"></div>
      <p>{paragraph}</p>
    </article>
    <div id="gallerySliderCart" class="gallery-slider">
      <div class="slide">
        <img src={Jacket.src} alt="Imagen 1">
        <figure>
          <h3>Jacket gris</h3>
          <div class="underlineSecondary"></div>
          <p>USD $ 15</p>
          <div class="inline">
            <div class="light-button dark-button">
              <button id="addItemButton" class="add-to-cart-button" data-index='1'>{primarybutton}</button>
            </div>
            <div class="light-button darkness-button spread">
              <button class="openModal" data-modal="modalA">{secondarybutton}</button>
            </div>
          </div>
        </figure>
      </div>
      <div class="slide">
        <img src={Jeans.src} alt="Imagen 2">
        <figure>
          <h3>jeans azules</h3>
          <div class="underlineSecondary"></div>
          <p>USD $ 70</p>
          <div class="inline">
            <div class="light-button dark-button">
              <button id="addItemButton">{primarybutton}</button>
            </div>
            <div class="light-button darkness-button spread">
              <button class="openModal" data-modal="modalA">{secondarybutton}</button>
            </div>
          </div>
        </figure>
      </div>
      <div class="slide">
        <img src={Jacket.src} alt="Imagen 2">
        <figure>
          <h3>chaqueta casual</h3>
          <div class="underlineSecondary"></div>
          <p>USD $ 25</p>
          <div class="inline">
            <div class="light-button dark-button">
              <button id="addItemButton">{primarybutton}</button>
            </div>
            <div class="light-button darkness-button spread">
              <button class="openModal" data-modal="modalA">{secondarybutton}</button>
            </div>
          </div>
        </figure>
      </div>
      <div class="slide">
        <img src={Jeans.src} alt="Imagen 2">
        <figure>
          <h3>jeans azules</h3>
          <div class="underlineSecondary"></div>
          <p>USD $ 70</p>
          <div class="inline">
            <div class="light-button dark-button">
              <button id="addItemButton">{primarybutton}</button>
            </div>
            <div class="light-button darkness-button spread">
              <button class="openModal" data-modal="modalA">{secondarybutton}</button>
            </div>
          </div>
        </figure>
      </div>
      <!-- justo aca agregamos otro contendedor pero vamos a esperar la api -->
    </div>
  
    <div class="gallery-dots" id="gallerySliderCart">
      <span class="dot-cart" data-index="0"></span>
      <span class="dot-cart" data-index="1"></span>
      <span class="dot-cart" data-index="2"></span>
      <span class="dot-cart" data-index="3"></span>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../assets//sass/index" as*;

  .gallery-container {
    width: 100%;
    position: relative;
    width: auto;
    max-width: 600px;
    overflow: hidden;
  }

  .gallery-slider {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  .slide {
    min-width: 100%;
  }

  .gallery-slider img {
    padding-top: 20px;
    width: 100%;
    flex-shrink: 0;
  }

  p {
    margin: 10px;
  }

  .gallery-dots {
    text-align: center;
    margin: 50px 0 20px;
  }

  .gallery-dots .dot-cart {
    display: inline-block;
    width: 29px;
    height: 10px;
    margin: 5px;
    background-color: $tertiary;
    border: 2px solid $accent-b-light;
    border-radius: 10%;
    cursor: pointer;
  }

  .gallery-dots .dot-cart.active {
    background-color: $accent-b-light;
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 25%);
  }

  .left-arrow, .right-arrow {
    position: absolute;
    display: flex;
    align-items: center;
    font-size: 50px;
    z-index: 10;
    display: none;
  }

  .left-arrow {
    left: 10%;
  }

  .right-arrow {
    right: 10%;
  }

  .underline {
    width: 20%;
  }

  //start description 
  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding-top: 20px;
  }

  .underline {
    width: 300px;
  }

  section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
    background-color: $tertiary;
  }

  figure {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    max-width: 300px;
    margin: 0 auto;
    h3 {
      text-align: left;
    }
  }

  .underlineSecondary{
    width: 271px;
    height: 2px;
    background-color: $accent-b-dark;
    justify-content: left;
    margin-top: 0px;
    border-radius: 2px;
    margin: 0 5%; 
  }

  p{
    text-align: center;
  }

  img {
    width: 100%;
    height: auto;
  }

  .inline {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  button {
    border: none;
    background-color: transparent;
    font-size: 1.3rem;
    font-family: $heading;
    font-weight: $regular;
    cursor: pointer;
  }
  
  .light-button.dark-button {
    background-color: $accent-b-dark;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 20%);
  }

  .darkness-button {
    background-color: transparent;
    border: 2px solid $accent-b-dark;
    box-shadow: 0 0 20px 10px rgba($accent-b-dark, 20%);
  }

  .darkness-button button {
    color: $accent-b-dark;
  }
  
  .light-button:hover {
    background-color: $accent-b-light;
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 25%);
  }

  .spread:hover {
    background-color: transparent;
    box-shadow: 0 0 25px 15px rgba($accent-b-light, 25%);
  }

@media (min-width: 1024px) {
  
  .arrow {
    display: block;
    cursor: pointer;
  }

  section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .gallery-container {
    max-width: 1100px;
    text-align: center;
    align-items: center;
    justify-content: center;
  }

  .gallery-slider {
    display: flex;
    transition: transform 0.5s ease;
    width: 33%;
  }

  .gallery-slider img {
    width: 70%;
  }
}
</style>