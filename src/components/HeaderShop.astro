---
import Cart from "../assets/image/Cart.png";
const {titleA, imgA, imgB} = Astro.props;
---

<header>
  <div class="content-header">
    <img src={imgA.src} alt="image" class="movil-image">
    <img src={imgB.src} alt="headerImage" class="desktop-image">
    <h1>{titleA}</h1>
    <article>
      <button id="cart">
        <a href="#"><img src={Cart.src} alt="#"></a>
      </button>
    </article>
  </div>
</header>

<style lang="scss">
  @use '../assets/sass/index' as *;

  .desktop-image img {
    display: none;
  }

  header {
    position: relative;
    width: 100%;
    aspect-ratio: 402 / 226;
    overflow: hidden;
  }

  .content-header {
    display: flex;
    height: 100%;
  }
  
  h1 {
    @include center-contents;
    position: absolute;
    flex-direction:unset;
    align-items: end;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba($primary, 30%), rgba($primary, 50%), rgba($primary, 100%));
    margin: 0;
    font-family: $heading;
    font-weight: $regular;
    font-size: 7rem; 
  }
  article {
    display: flex;
    justify-content: end;
    align-items: end;
  }

  button { 
    position: fixed;
    right: 0;
    background-color: transparent;
    cursor: pointer;
    z-index: 80;
   }

  @media (min-width: 1024px) {

    .movil-image {
      display: none;
    }

    h1 {
    font-size: 11rem;
    align-items: center;
    }

    header {
    position: relative;
    width: 100%;
    aspect-ratio: 1440 / 700;
    overoflow-x: hidden;
    overflow: hidden;
    }
  }
</style>