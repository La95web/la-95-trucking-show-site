const {} = Astro.props;
---


<div id="modalA" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo"><div class="line2"></div></div>
  </div>
  <div class="block-title">
    <p>Llena tus datos y nos pondremos en contacto contigo en breve.</p> 
    <form id="contact-form-mensual">
      <div class="row">
        <label>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>
      </div>
      <div class="column">
        <label>
          <input type="email" name="email" placeholder="Email" required />
        </label>
      </div>
      <button type="submit" class="light-gold gold-button">Enviar</button>
    </form>
  </div>
</div>

<div id="modalB" class="modal">
  <div class="close-menu-container">
    <span class="close"></span>
    <div class="rombo"><div class="line2"></div></div>
  </div>
  <div class="block-title">
    <p>Llena tus datos y nos pondremos en contacto contigo en breve.</p> 
    <form id="contact-form-anual">
      <div class="row">
        <label>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>
      </div>
      <div class="column">
        <label>
          <input type="email" name="email" placeholder="Email" required />
        </label>
      </div>
      <button type="submit" class="light-gold gold-button">Enviar</button>
    </form>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  // Función genérica para manejar envío
  async function handleSubmit(form, tipoSuscripcion) {
    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      const name = form.querySelector('[name="name"]').value;
      const email = form.querySelector('[name="email"]').value;

      const mensaje = `Hola, mi nombre es ${name} escribo desde la web de la 95 trucking show. Estoy interesado en la suscripción ${tipoSuscripcion}.`;

      // 1️⃣ Abrir WhatsApp
      const url = `https://wa.me/+12015984639?text=${encodeURIComponent(mensaje)}`;
      window.open(url, '_blank');

      // 2️⃣ Enviar correo al backend
      try {
        const response = await fetch('http://localhost:3000/v1/contacts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, email, message: mensaje })
        });

        const result = await response.json();

        if (response.ok) {
          const confirmation = document.createElement('div');
          confirmation.innerHTML = `
            <div id="confirmation-message" style="
              background-color: #ffcc4d;
              color: #202327;
              padding: 15px;
              margin-top: 20px;
              border: 1px solid #dd2e44;
              border-radius: 8px;
              font-family: Arial, sans-serif;
              animation: fadeIn 0.5s ease-in-out;
            ">
              ✅ ¡Tu mensaje ha sido enviado con éxito, nos pondremos en contacto contigo!
            </div>
          `;
          form.parentElement.appendChild(confirmation);
          setTimeout(() => confirmation.remove(), 5000);
          form.reset();
        } else {
          alert('❌ Error al enviar el mensaje: ' + result.message);
        }
      } catch (err) {
        console.error('Error:', err);
        alert('⚠️ Hubo un problema al enviar el mensaje');
      }
    });
  }

  // Asignar lógica a cada formulario
  const formMensual = document.getElementById('contact-form-mensual');
  const formAnual = document.getElementById('contact-form-anual');

  handleSubmit(formMensual, "MENSUAL");
  handleSubmit(formAnual, "ANUAL");
});
</script>

