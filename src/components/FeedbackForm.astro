---
const {title, text, name, email, textarea, send} = Astro.props;
---
<section>
  <div class="podcasts-container">
    <h2>{title}</h2>
    <div class="underline"></div>
    <p>{text}</p>
    <form action="/" method="post">
      <label for="name">{name}</label>
      <input type="text" id="name" name="name" placeholder="Your name" required>

      <label for="email">{email}</label>
      <input type="email" id="email" name="email" placeholder="name@gmail.com" required>

      <label for="message">{textarea}</label>
      <textarea id="message" name="message" placeholder="Write your message..."></textarea>
      <div class="button-container"> 
        <button class="light-button red-button" type="submit">{send}</button>
      </div>
    </form>
  </div>
</section>
    
<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    background-color: $primary;
  }
    
  .podcasts-container P {
    margin: 0 5%;
    color: $secondary;
    margin-top: 20px;
  }

  label {
    font-size: 1rem;
    font-family: $text;
    font-weight: $regular;
    color: $secondary;
    padding-top: 20px;
  }

  .underline {
    width: 25%;
  }

  button {
    margin-top: 40px;
    margin-left: 0;
    font-size: 1.5rem;
  }

  #name {
    width: 100%;
    height: 45px;
    border: 2px solid $accent-b-light;
    background-color: transparent;
    border-radius: 8px;
  }

  #name {
    box-shadow: 0 0 20px 5px rgba($accent-b-light, 25%);
  }
  
  #name:hover {
    box-shadow: 0 0 25px 15px rgba($accent-b-dark, 30%);
  }

  input {
    width: 100%;
    height: 45px;
    border: 2px solid $secondary;
    background-color: transparent;
    border-radius: 8px;
  }

  form {
    display: flex;
    flex-direction: column;
    margin: 0 5%;
  }

  textarea {
    height: 221px;
    border: 2px solid $secondary;
    background-color: transparent;
    border-radius: 8px;
  }

  @media (min-width: 1024px) {

    form {
      max-width: 45%;
      margin: 0 auto;
    }
    h2 {
      font-size: 3rem;
    }
    p{
      font-size: 1.5rem;
    }
    label {
      font-size: 1.5rem;
    }
    button {
      font-size: 2rem;
    }
  }
</style>