---
const {titleA, titleB, titleC, titleD, textA, textB, textC} = Astro.props;
---

<div class="podcasts-container">
 <h2>{titleA}</h2>
 <div class="underline"></div>
  <div class="section-center">
    <div class="end-line">
      <h3>{titleB}</h3>
      <i class="ph ph-sunglasses"></i>
    </div>
    <div class="blackline"></div>
    <p>{textA}</p>
    <div class="end-line">
      <h3>{titleC}</h3>
      <i class="ph ph-target"></i>
    </div>
    <div class="blackline"></div>
    <p>{textB}</p>
    <div class="end-line">
      <h3>{titleD}</h3>
      <i class="ph ph-nut"></i>
    </div>
    <div class="blackline"></div>
    <p class="last-text">{textC}</p>
  </div>
</div>
    
<style lang="scss">
  @use "../assets/sass/index" as *;

  .podcasts-container {
    background-image: url('../assets/image/black-truck.webp');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    height: 1200px;
    position: relative;
  }
    
  .podcasts-container P {
    margin: 0 5%;
    color: white;
    padding-top: 20px;
  }

  .section-center {
    position: absolute;
    background-color: rgba($primary, 0.85);
    margin: 0 5%;
    width: 60%;
    min-width: 90%;
    top: 130px;
    padding: 0;
    border-radius: 8px;
    padding-bottom: 20px;
  }

  h3 {
    font-size: 2rem;
    font-weight: $regular;
    font-family: $heading;
    color: white;
    margin: 0 5%;
    margin-top: 20px;
  }

  .last-text {
    padding-bottom: 20px;
  }
  
  .section-center i {
    color: $accent-b-dark;
    font-size: 34px;
    margin-right: 20px;
    margin-top: 25px; 
  }
  
  .end-line {
    display: flex;
    justify-content: space-between;
  }

  .blackline {
    width: 90%;
    height: 2px;
    background-color: $accent-b-dark;
    margin-top: 0px;
    margin-left: 20px;
  }

  @media (min-width: 1024px) {

    .podcasts-container {
      height: 758px;
    }

    .section-center {
      min-width: 70%;
    }

    h3 {
      margin-top: 20px;
      font-size: 2rem;
    }
    
    p {
      font-size: 1.25rem;
    }
    .blackline {
      width: 90%;
      height: 2px;
      background-color: $accent-b-dark;
      margin-top: 0px;
      margin-left: 55px;
      }

    .section {
      display: flex;
      flex-direction: row;
    }

    .flex {
      background-color: $primary;
      padding-bottom: 20px;
    }
  }
</style>