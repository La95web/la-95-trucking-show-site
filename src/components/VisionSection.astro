<style lang="scss">
  @use "../assets/sass/index" as *;

  .podcasts-container {
    display: flex;
    flex-direction: column;
  }
    
  .podcasts-container P {
    margin: 0 5%;
    color: $secondary;
    padding-top: 20px;
  }

  
  h3 {
    font-size: 2rem;
    font-weight: $regular;
    font-family: $heading;
    color: $secondary;
    margin: 0 5%;
    margin-top: 20px;
  }

  .last-text {
    padding-bottom: 20px;
  }
  
  .section-center i {
    color: $accent-c-dark;
    font-size: 34px;
    margin-right: 20px;
    margin-top: 25px; 
  }
  
  .end-line {
    display: flex;
    justify-content: space-between;
  }

  .colorsred {
    width: 85%;
    height: 2px;
    background-color: $accent-c-dark;
    margin-top: 0px;
    margin-left: 20px;
  }
  
  .colorsblue {
    width: 85%;
    height: 2px;
    background-color: #4D80FF;
    margin-top: 0px;
    margin-left: 20px;
  }

  .colorswhite {
    width: 85%;
    height: 2px;
    background-color: $secondary;
    margin-top: 0px;
    margin-left: 20px;
  }

  figure {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    background-color: $primary; 
  }

  figure img {
    margin-top: 20px;
    width: 100%;
    height: auto;
  }

  .flex {
    background-color: $primary;
  }

  @media (min-width: 1024px) {
    
    .podcasts-container {
      display: flex;
      flex-direction: row;
    }

    figure {
      display: flex;
      margin-right: 3%;
    }

    figure img {
      margin: 0;
      width: 648px;
      height: 560px;
    }

    h3 {
      margin-top: 20px;
      font-size: 2rem;
    }
    
    p {
      font-size: 1.25rem;
    }

    .colorsred {
      margin-left: 35px;
    }
  
    .colorsblue {
      margin-left: 35px;
    }

    .colorswhite {
      margin-left: 35px;
    }

    .section {
      display: flex;
      flex-direction: row;
    }

    .flex {
      background-color: $primary;
      padding-bottom: 20px;
    }
  }
</style>