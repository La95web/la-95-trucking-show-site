    flex-shrink: 0;
  }

  .gallery-dots {
    text-align: center;
    margin-top: 10px;
  }

  .gallery-dots .dot {
    display: inline-block;
    width: 29px;
    height: 10px;
    margin: 5px;
    background-color: $tertiary;
    border: 2px solid $accent-b-light;
