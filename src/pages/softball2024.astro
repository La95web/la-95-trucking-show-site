    padding: 40px 30px;
    background-image: url('../assets/image/Pentagonos.png');
  }

  h2 {
    margin: 100px 0 0;
  }

  .underline {
    margin: 0;
  }

  .video-gallery {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
    margin: 10px;
  }

  video {
    width: 300px;
