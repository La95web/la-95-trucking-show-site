      text-align: center;
       margin: 50px 0 0;
    }

    .underline {
      margin: 0 auto;
    }

    video {
      width: 400px;
    }

    .arrow {
    display: block;
    cursor: pointer;
    }

    figure {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>