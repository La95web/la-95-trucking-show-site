---
import SpanishLayout from "../layouts/SpanishLayout.astro";
import Footer from "../components/Footer.astro";
import Left from "../assets/image/left.png";
import Right from "../assets/image/right.png";

const softball2024s = await fetch(import.meta.env.PUBLIC_API_BASE_URL.concat('softball2024s'),
  {
    method: 'GET',
    headers: { Accept: 'application/json' },
  }
).then((response) => response.json());
const sorted = softball2024s
  .slice()
  .sort((a, b) => new Date(b.uploaded_at).getTime() - new Date(a.uploaded_at).getTime());
---

<SpanishLayout title="softball 2024">
  <section>
    <h2>Videos</h2>
    <div class="underline"></div>
    <div class="flex-section">
      {sorted.map((softball2024) =>
        softball2024.videos?.length > 0 && (
          <div class="video-gallery">
            <video controls width="300" preload="none" poster={softball2024.poster}>
              <source src={softball2024.videos[0]} type="video/mp4" />
            </video>
          </div>
        )
      )}
    </div>
    <h2>Imágenes destacadas</h2>
    <div class="underline"></div>
    <div class="carouselimg">
      <div id="carousel-track">
        {sorted.map((softball2024) =>
          softball2024.thumbnails?.length > 0 &&
            softball2024.thumbnails.map((thumb) => (
              <img src={thumb} alt="Imagen destacada" />
            ))
        )}
      </div>
    </div>
    <figure>
      <div class="arrow left-arrow" id="leftArrow">
        <img src={Left.src} alt="Left" />
      </div>
      <div class="arrow right-arrow" id="rightArrow">
        <img src={Right.src} alt="Right" />
      </div>
      <div class="gallery-container">
        <h2>Galería</h2>
        <div class="underline"></div>
        <div class="gallery-slider" id="gallerySlider">
          {sorted.map((softball2024) =>
            softball2024.gallery?.length > 0 &&
              softball2024.gallery.map((img, index) => (
                <img src={img} alt={`Imagen ${index + 1}`} />
              ))
          )}
        </div>
        <div class="gallery-dots" id="galleryDots">
          {sorted.map((_, index) => (
            <span class="dot" data-index={index}></span>
          ))}
        </div>
      </div>
    </figure>
  </section>
  <Footer />
</SpanishLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.getElementById('carousel-track');

    // Duplicar contenido para efecto infinito
    track.innerHTML += track.innerHTML;

    let position = 0;
    const speed = 1.4; // Ajusta la velocidad

    function moverCarrusel() {
      position -= speed;
      if (Math.abs(position) >= track.scrollWidth / 2) {
        position = 0; // Reinicia sin parpadeo
      }
      track.style.transform = `translateX(${position}px)`;
      requestAnimationFrame(moverCarrusel);
    }

    moverCarrusel();
  });
  import "../scripts/mainMenu.js";
  import "../scripts/Gallery.js"
</script>

