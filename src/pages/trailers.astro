---
export const prerender = false;

import SpanishLayout from "../layouts/SpanishLayout.astro";
import Team2 from "../assets/image/tipDesk.webp";
import Footer from "../components/Footer.astro";
import TrailerTips from "../components/TrailerTips.astro";
import HeaderNews from "../components/HeaderNews.astro";
import Trailervideos from "../components/Trailervideos.astro";
const res = await fetch(import.meta.env.PUBLIC_API_BASE_URL + 'tips');
const articles = await res.json();

const lastArticle = articles
  .filter(a => a.language === 'spanish')
  .sort((a, b) => {
  const dateDiff =
    new Date(b.uploaded_at).getTime() -
    new Date(a.uploaded_at).getTime();
  if (dateDiff !== 0) return dateDiff;
  return b.id - a.id;
})[0];
---

<SpanishLayout 
  title={lastArticle?.title ?? "La 95 Trucking Show"}
  ogTitle={lastArticle?.title}
  ogDescription={lastArticle?.content?.slice(0, 120)}
  ogImage={lastArticle?.thumbnail_url}
  ogUrl="https://la95truckingshow.com/trailers">
  <HeaderNews 
  titleB="recomendaciones"
  Team2={Team2}/>
  <TrailerTips
  link1="/trailers/"
  link2="/tractors/"
  link3="/documents/"
  link4="/safety/"
  link5="/noticias/"
  navTips1="trailers"
  navTips2="tractors"
  navTips3="documentos"
  navTips4="safety"
  navTips5="noticias"
  title="trailers"
  paragraph="Aquí encontrarás sugerencias para el mantenimiento de la mecánica de tu trailer y tips esenciales para la carretera. ¡Descubre cómo optimizar tu viaje y mantener tu vehículo en perfecto estado!"
  button="ver más" />
  <Trailervideos language="es" />
  <Footer />
</SpanishLayout>
<script>
  import "../scripts/mainMenu.js";
  import "../scripts/SearchNews.js"
</script>