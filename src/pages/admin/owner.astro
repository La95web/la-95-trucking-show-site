---
export const prerender = false;

import OwnerForm from "../../components/forms/owner-form/OwnerForm";
import OwnerListitem from "../../components/lists/list-items/owner-list-item/OwnerList";
import AdminDashboard from "../../layouts/AdminDashboard.astro";

const owners = await fetch(import.meta.env.PUBLIC_API_BASE_URL.concat('owners'), {
  method: 'GET',
  headers: {
    'Accept': 'application/json',
  },
}).then((response) => response.json());

const reversedOwners = owners.reverse();
---
<AdminDashboard title="jobs">
  <nav>
    <ul>
      <li><a href="/admin/owner">OwnerOperator-jobs</a></li>
      <li><a href="/admin/driverjobs">Driver-Jobs</a></li>
      <li><a href="/admin/realstate">Rentas</a></li>
      <li><a href="/admin/distpacher">Distpacher-jobs</a></li>
    </ul>
  </nav>
  <article>
    <h1>Owner operator jobs</h1>
    <h2>Realiza una nueva publicación aquí</h2>
  </article>
  <OwnerForm client:load />
  <h2>Lista de articulos publicados</h2>
  <ul>
    {reversedOwners.map((owner) => (
      <OwnerListitem owner={owner} client:load />
    ))}
  </ul>
</AdminDashboard>
<script>
  import "../../scripts/mainMenu.js"
</script>
<style lang="scss">
  @use "../../assets/sass/index" as *;
  
  nav {
  ul {
    display: flex;
    justify-content: center;
    gap: 20px;
    list-style: none;
    padding-top: 150px;
    li {
      a {
        text-decoration: none;
        color: $accent-b-dark;
        font-weight: bold;
        font-size: 1.2rem;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
  }

  h1, h2 {
    text-align: center;
    color: $accent-b-dark;
  }

  article{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin: 0px 0;
  }
</style>