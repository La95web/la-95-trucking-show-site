---
import SpanishLayout from "../layouts/SpanishLayout.astro";
import Team1 from "../assets/image/noticiasimg.webp";
import Team2 from "../assets/image/truckerDesktop.webp";
import Footer from "../components/Footer.astro";
import AllNews from "../components/AllNews.astro";
import HeaderNews from "../components/HeaderNews.astro";
const ShowContent = true;
---

<SpanishLayout title="la 95 trucking show">
  <HeaderNews
  titleA="noticias &"
  titleB="tips"
  Team1={Team1}
  Team2={Team2}/>
