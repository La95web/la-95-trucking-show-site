---
export const prerender = false;
import Team2 from "../../assets/image/tipDesk.webp";
import Footer from "../../components/Footer.astro";
import TrailerTipsEn from "../../components/TrailerTips.astro";
import HeaderNews from "../../components/HeaderNews.astro";
import EnglishLayout from "../../layouts/EnglishLayout.astro";
import Trailervideos from "../../components/Trailervideos.astro";
const res = await fetch(import.meta.env.PUBLIC_API_BASE_URL + 'tips');
const articles = await res.json();

const lastArticle = articles
  .filter(a => a.language === 'english')
  .sort((a, b) => {
  const dateDiff =
    new Date(b.uploaded_at).getTime() -
    new Date(a.uploaded_at).getTime();
  if (dateDiff !== 0) return dateDiff;
  return b.id - a.id;
})[0];
---

<EnglishLayout 
  title={lastArticle?.title ?? "La 95 Trucking Show"}
  ogTitle={lastArticle?.title}
  ogDescription={lastArticle?.content?.slice(0, 120)}
  ogImage={lastArticle?.thumbnail_url}
  ogUrl="https://la95truckingshow.com/en/trailerTips">
  <HeaderNews 
  titleA="tips"
  titleB="truckers"
  Team2={Team2}/>
  <TrailerTipsEn
  language="en"
  link2="/en/tractorsEn/"
  link3="/en/documentsEn/"
  link4="/en/safetyEn/"
  link5="/en/news/"
  navTips1="trailers"
  navTips2="tractors"
  navTips3="documents"
  navTips4="safety"
  navTips5="news"
  title="trailers"
  paragraph="Here you will find suggestions for maintaining your trailerâ€™s mechanics and essential tips for the road. Discover how to optimize your journey and keep your vehicle in perfect condition!"
  button="See more" />
  <Trailervideos language="en" />
  <Footer />
</EnglishLayout>
<script>
  import "../../scripts/mainMenu.js";
  import "../../scripts/SearchNews.js";
  import "../../scripts/toggleReadMoreEnglish.js";
</script>