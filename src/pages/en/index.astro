<style lang="scss">
  @use "../../assets/sass/index" as *;

  .section-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: transparent;
  }

  h2 {
    text-align: left;
  }
  p{
    text-align: left;
    margin: 10px 5%;
  }

  .content-box {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .content-box img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    display: block;
    cursor: pointer;
  }

  .background-block {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .rows {
    position: relative;
    background-image: url('../../assets/image/truckersMovil.png');
    width: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .rows::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.85); 
    z-index: 0;
    border-radius: inherit;
  }

  .rows > * {
    position: relative;
    z-index: 1;
  }

  a {
    color: $accent-b-light;
    font-size: 0.7em;
  }

  a:hover {
    color: white;
  }


  section {
    display: block;
    text-align: center;
    padding: 30px 20px;
  }

  @media (max-width: 768px) {
  .background-block {
      width: 50%;
    }
  }

  @media (min-width: 1024px) {
    .section-content {
      margin: 70px 0;
    }
    section {
     padding: 30px 0;
    }

    h2, p {
      text-align: center;
    }

    .underline {
      margin: 0 auto;
    }

    .content-box a {
      font-size: 1.2rem;
    }

    .background-block {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      width: 30%;
    }

    .rows {
      position: relative;
      background-image: url('../../assets/image/truckers.png');
      width: 100%;
      min-height: 800px;
      background-size: cover;
      background-position: center;
    }
  }
</style>