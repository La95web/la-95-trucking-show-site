    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.85); 
    z-index: 0;
    border-radius: inherit;
  }

  .rows > * {
    position: relative;
    z-index: 1;
  }

  a {
    color: $accent-b-light;
    font-size: 0.7em;
  }

  a:hover {
    color: white;
  }


  section {
    display: block;
    text-align: center;
    padding: 30px 20px;
  }

  @media (max-width: 768px) {
  .background-block {
      width: 50%;
    }
  }

  @media (min-width: 1024px) {
    .section-content {
      margin: 70px 0;
    }
    section {
     padding: 30px 0;
    }

