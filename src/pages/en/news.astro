---
export const prerender = false;

import Team2 from "../../assets/image/tipDesk.webp";
import Footer from "../../components/Footer.astro";
import Allnews from "../../components/Allnews.astro";
import HeaderNews from "../../components/HeaderNews.astro";
import EnglishLayout from "../../layouts/EnglishLayout.astro";
import Allnewsvideo from "../../components/Allnewsvideo.astro";
const res = await fetch(import.meta.env.PUBLIC_API_BASE_URL + 'news');
const articles = await res.json();

const lastArticle = articles
  .filter(a => a.language === 'english')
  .sort((a, b) => {
  const dateDiff =
    new Date(b.uploaded_at).getTime() -
    new Date(a.uploaded_at).getTime();
  if (dateDiff !== 0) return dateDiff;
  return b.id - a.id;
})[0];
---

<EnglishLayout
  title={lastArticle?.title ?? "La 95 Trucking Show"}
  ogTitle={lastArticle?.title}
  ogDescription={lastArticle?.content?.slice(0, 120)}
  ogImage={lastArticle?.thumbnail_url}
  ogUrl="https://la95truckingshow.com/en/news">
  <HeaderNews 
  titleA="tips"
  titleB="truckers"
  Team2={Team2}/>
  <Allnews
  link1="/en/trailerTips/"
  link2="/en/tractorsEn/"
  link3="/en/documentsEn/"
  link4="/en/safetyEn/"
  navTips1="trailers"
  navTips2="tractors"
  navTips3="documents"
  navTips4="safety"
  title="news"
  language="en"
  paragraph="Here you can find the latest news and updates from the world of transportation and logistics. Stay informed about trends, regulations, and important events affecting truckers and the industry as a whole."
  button="See more" />
  <Allnewsvideo language="en" />
  <Footer />
</EnglishLayout>
<script>
  import "../../scripts/mainMenu.js";
  import "../../scripts/SearchNews.js"
</script>