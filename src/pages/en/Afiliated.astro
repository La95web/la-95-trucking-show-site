<style lang="scss">
  @use '../../assets/sass/index' as *;

    .underground {
      padding: 70px 0;
      background-image: url("../../assets/image/Pentagonos.png");
      background-repeat:repeat;
      background-position: cover;
      background-attachment: fixed;
      p{
        margin: 10px 5%; 
      }
    } 

    header {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }

    span {
      text-decoration: line-through;
      color: grey;
      font-size: 1.2rem;
    }

    .section-content {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      margin-top: 20px;

    div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-color: $primary;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.9);
      padding: 20px;
      margin: 10px;
      text-align: center;
      width: 300px;

      p {
        font-size: 1.2rem;
        color: $secondary;
        margin: 10px 0;

        strong {
          font-size: 1.5rem;
          color: $accent-b-dark;
        }
      }
    }

    .light-gold {
      width: 70%;
      border-radius: 8px;
      padding: 10px;
      transition: background-color 0.3s, box-shadow 0.3s;
  
      button, #openModal {
        color: black;
        font-size: 1.2rem;
        font-weight: $regular;
        font-family: $heading;
        background-color: transparent;
        cursor: pointer;
      }
    }
  
    .light-gold.gold-button {
      background-color: $accent-b-dark;
      box-shadow: 0 0 20px 10px rgba($accent-b-dark, 20%);
      border: 2px solid $accent-b-dark;
      margin: 20px 0 30px;
    }
  
    .gold-button {
      background-color: $accent-b-light;
    }
  
    .gold-button:hover {
      box-shadow: 0 0 25px 15px rgba($accent-b-light, 30%);
    }
  }

  //beneficios flex

  figure, .step-content {
    display: flex;
    margin: 20px 5%;
    border: 2px solid $accent-b-light;
    border-radius: 8px;
    img {
      display: none;
    }
  }

  ul{
    font-family: $text;
    font-size: 1.2rem;
    line-height: 2.5;
    font-weight: $regular;
    color: white;
    padding: 0;
  }

  i{
    color: $accent-b-dark;
    margin: 10px;
  }

  li {
    margin: 10px;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;

    li {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      margin-bottom: 12px;
      font-family: $text;
      font-size: 16px;
      line-height: 1.5;
      color: white;

      i {
        font-size: 20px;
        color: #FFCC4D;
        flex-shrink: 0;
        margin-top: 4px;
      }

      span {
        display: block;
        flex: 1;
      }
    }
  }

  .info-content {
    padding-top: 50px;
  }


  @media (min-width: 1024px) {

    section {
      padding-top: 50px;
    }

    figure, 
    .step-content {
      justify-content: space-between;
      width: 50%;
      img {
        display: block;
        width: 300px;
        min-width: 50px;
        object-fit: contain;
      }
    }

    .info-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    h2, p {
      text-align: center;
    }

    .underline {
      margin: 0 auto;
    }
  }
</style>