---
export const prerender = false;

import Team2 from "../../assets/image/tipDesk.webp";
import Footer from "../../components/Footer.astro";
import DocumentTips from "../../components/DocumentTips.astro";
import HeaderNews from "../../components/HeaderNews.astro";
import EnglishLayout from "../../layouts/EnglishLayout.astro";
import Documentsvideo from "../../components/Documentsvideo.astro";
const res = await fetch(import.meta.env.PUBLIC_API_BASE_URL + 'doctips');
const articles = await res.json();

const lastArticle = articles
  .filter(a => a.language === 'english')
  .sort((a, b) => {
  const dateDiff =
    new Date(b.uploaded_at).getTime() -
    new Date(a.uploaded_at).getTime();
  if (dateDiff !== 0) return dateDiff;
  return b.id - a.id;
})[0];
---

<EnglishLayout
  title={lastArticle?.title ?? "La 95 Trucking Show"}
  ogTitle={lastArticle?.title}
  ogDescription={lastArticle?.content?.slice(0, 120)}
  ogImage={lastArticle?.thumbnail_url}
  ogUrl="https://la95truckingshow.com/en/documentsEn">
  <HeaderNews 
  titleB="suggestions"
  Team2={Team2}/>
  <DocumentTips
  language="en"
  link1="/en/trailerTips/"
  link2="/en/tractorsEn/"
  link3="/en/documentsEn/"
  link4="/en/safetyEn/"
  link5="/en/news/"
  navTips1="trailers"
  navTips2="tractors"
  navTips3="documents"
  navTips4="safety"
  navTips5="news"
  title="documents"
  paragraph="Here you will find all about the documentation for your truck to avoid fines, registrations, permits, expired documents, how to renew among others."
  button="See more" />
  <Documentsvideo language="en" />
  <Footer />
</EnglishLayout>
<script>
  import "../../scripts/mainMenu.js";
  import "../../scripts/SearchNews.js"
</script>