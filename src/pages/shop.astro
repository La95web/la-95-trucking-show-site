---
import EnglishLayout from "../layouts/EnglishLayout.astro";
import HeaderShop from "../components/HeaderShop.astro";
import ShopA from "../assets/image/movilshop.png";
import ShopB from "../assets/image/headerShopDesk.webp";
import Footer from "../components/Footer.astro";
import ShopItems from "../components/ShopItems.astro";
import ModalCart from "../components/ModalCart.astro";
import GalleryCart from "../components/GalleryCart.astro";
---

<EnglishLayout title="la 95 trucking show">
  <HeaderShop
  link1="/cart/"
  titleA="shop"
  imgA={ShopA}
  imgB={ShopB}
  />
  <GalleryCart
  title="Featured Articles"
  paragraph="lorem ipsum dolar sit amet"
  primarybutton="add"
  secondarybutton="see more" />
  <ShopItems
  title="articles"
  paragraph="lorem ipsum dolar sit amet"
  primarybutton="Add to Card"
  secondarybutton="see more" />
  <ModalCart />
  <Footer />
