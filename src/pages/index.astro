 .top-companies {
    background-image: url('../assets/image/truckersMovil.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    text-align: center;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .top-companies::before {
