    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.85); 
    z-index: 0;
    border-radius: inherit;
  }

  .top-companies > * {
    position: relative;
    z-index: 1;
    color: #fff;
  }

  .companies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    gap: 1rem;
  }

  .content-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    min-height: 10px;
    text-align: center;
  }

  .content-box img {
    width: 100px;  
    height: 80px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }

  .content-box a {
    font-size: 0.95rem;
    color: $accent-b-light;
    text-decoration: none;
  }

  .content-box a:hover {
    text-decoration: underline;
    color: $secondary;
    transition: color 0.3s ease;
  }

  @media (min-width: 768px) {
    .companies-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .companies-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .content-box img {
      width: 150px;   
    }

    .top-companies {
      background-image: url('../assets/image/truckers.png');
    }
  }
</style>